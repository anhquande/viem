<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin - Page Manager</title>

    <link href="/admin/css/bootstrap.css" rel="stylesheet">
    <link href="/admin/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="/admin/css/admin.css" rel="stylesheet">

</head>
<body>
	#parse("/admin/header.vm")	

	<div class="container">    
			<div class="panel panel-default">
				<form toolbar-async action="/admin/page" method="post" class="pull-right">
					<input type="hidden" name="action" value="">   
						<span class="tooltip-container">
							<a href="/admin/page?action=create" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="" data-original-title="Create a new Page into cache"><i class="fa fa-plus"></i> </a>
							<button class="btn btn-default" type="submit" name="btSaveCache" data-toggle="tooltip" data-placement="top" title="" data-original-title="Save cache to database"><i class="fa fa-database"></i> </button> 
							<button class="btn btn-default" type="submit" name="btLoadCache" data-toggle="tooltip" data-placement="top" title="" data-original-title="Restore cache from database"><i class="fa fa-reply"></i> </button>
							<button class="btn btn-default" type="submit" name="btClearPages" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete all pages from cache and database"><i class="fa fa-trash-o"></i> </button>
							<a href="/admin/page?action=export2json" class="btn btn-default" name="btExport" data-toggle="tooltip" data-placement="top" title="" data-original-title="Export database to json (also save cache to database)"><i class="fa fa-save"></i> </a>
							<button class="btn btn-default" type="submit" name="btImport" data-toggle="tooltip" data-placement="top" title="" data-original-title="Import from JSON file to database. Cache does not change."><i class="fa fa-upload"></i> </button>
												<img src="$theme/icon/loading.gif" name="loading-indicator" style="display:none" /><span name="loading-msg"></span>
							
						</span>
				 </form>		
				 <h4>Page Manager <small></small></h4>
			</div>
			
			<div id="uploadForm">
				<form fileupload-async action="/admin/page" method="post" enctype="multipart/form-data">
			        <input type="submit" value="Start Import">
			        <input type="file" name="importedFile">			        
			    </form>
			    
			    <div class="progress">
			        <div class="bar"></div >
			        <div class="percent">0%</div >
			    </div>
			    
			    <div id="status"></div>
			</div>
		   	<div class="table-responsive">
			    <table class="table">
			        <thead>
			            <tr>
			                <th class="col-sm-1">#</th>
			                <th class="col-sm-3">Path</th>
			                <th class="col-sm-6">Title </th>
			                <th class="col-sm-2">
			                </th>
			            </tr>
			        </thead>
			        <tbody>
			        #foreach($page in $pages)     
			          <tr>
			                <td>$velocityCount</td>
			                <td><a href="/admin/page?action=view&name=$page.getName()">/$page.getName()</a></td>
			                <td>$page.getTitle()</td>
			                <td>
			                	 <form data-async action="/admin/page" method="post">
									<input type="hidden" name="name" value="$page.getName()">
									<input type="hidden" name="action" value="">   
									<img src="$theme/icon/loading.gif" name="loading-indicator" style="display:none" /><span name="loading-msg"></span>
									<span class="tooltip-container">									
										<a href="/${page.name}.html" target="_blank" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="" data-original-title="View on frontend"><i class="fa fa-play"></i></a>									
										<button class="btn btn-default" type="submit" name="btDelete" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete from cache and from database"><i class="fa fa-trash-o"></i></button>
									</span>
									
								 </form>
							</td>
			          </tr>
			        #end
			        </tbody>
			    </table>
			</div> <! -- table-responsive -->
	</div>
	#parse("/admin/footer.vm")
	
	<script src="/admin/js/jquery-1.11.1.min.js" type="text/javascript"></script>
	<script src="/admin/js/bootstrap.min.js"></script>
	<script src="http://malsup.github.com/jquery.form.js"></script>
	<script src="/admin/js/admin.page.js"></script>
</body>

</html>
