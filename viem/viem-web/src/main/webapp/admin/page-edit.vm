<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin - Page Editor</title>


    <link href="/admin/css/bootstrap.css" rel="stylesheet">
    <link href="/admin/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="/admin/css/admin.css" rel="stylesheet">
        
</head>
<body>
 	
 	#parse("/admin/header.vm")	
 	
	<div class="container">    
			<div class="page-header">
  				<h4>Page Editor <small></small></h4>
			</div>
		
		   	<form class="form-horizontal" data-async action="/admin/page" method="post">
		   		<input type="hidden" name="action" value="">   
		   		<input type="hidden" name="name" value="$page.getName()">   
				<fieldset>
							
				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="newname">Name</label>  
				  <div class="col-md-4">
				  	<input id="newname" name="newname" type="text" placeholder="placeholder" class="form-control input-md" value="$page.getName()">
				  	<span class="help-block"><a name="previewLink" href="/${page.name}.html" target="_blank">Visit this page on frontend</a></span>  
				  </div>
				</div>
				
				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="title">Title</label>  
				  <div class="col-md-4">
				  	<input id="title" name="title" type="text" placeholder="placeholder" class="form-control input-md" value="$page.getTitle()">
				  </div>
				</div>
				
				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="description">Description</label>  
				  <div class="col-md-4">
				  	<input id="description" name="description" type="text" placeholder="placeholder" class="form-control input-md" value="$page.getDescription()">
				  </div>
				</div>
				
				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="template">Template</label>  
				  <div class="col-md-4">
				  	<input id="template" name="template" type="text" placeholder="template default is 'default'" class="form-control input-md" value="$page.getTemplate()">
				  </div>
				</div>
				
				<!-- Textarea -->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="content">Page Content</label>
				  <div class="col-md-4">                     
				    <textarea class="form-control" id="content" name="content">$page.getContent()</textarea>
				  </div>
				</div>
				
				<!-- Button (Double) -->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="button1id"></label>
				  <div class="col-md-8">
				  	<button class="btn btn-default" type="submit" name="btSave" data-toggle="tooltip" data-placement="top" title="" data-original-title="Save this page"><i class="fa fa-floppy-o"></i> Save</button>
				  	<button class="btn btn-default" type="submit" name="btCancel" data-toggle="tooltip" data-placement="top" title="" data-original-title="Cancel"><i class="fa fa-undo"></i> Back</button>
				  </div>
				</div>
				
				<div class="form-group" >
					<label class="col-md-4 control-label"><img src="$theme/icon/loading.gif" name="loading-indicator" style="display:none" /></label>
					<div class="col-md-4" style="margin-top:10px">
						<span name="loading-msg" style="display:block"></span>
					</div>
				</div>
				</fieldset>
			</form>
	</div>
	
	#parse("/admin/footer.vm")
	
 	<script src="/admin/js/jquery-1.11.1.min.js" type="text/javascript"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="/admin/js/admin.page-edit.js"></script>
</body>

</html>
