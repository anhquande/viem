<!DOCTYPE html>
<html lang="en">

<head>    
	#parse("$theme/pages/common-header.vm")
</head>

<body>
	#parse("$theme/pages/header.vm")
	
    <div class="container">
        <div class="row">
			<!-- Sidebar -->
            <div class="col-md-3">
				#parse ("$theme/pages/categories.nav.vm")
            </div>
			
			<!-- Main Container -->
            <div class="col-md-6">
            	<h3>$entity.title</h3> 
            	
            	#foreach($product in $products)
            	<ul class="media-list">
				  <li class="media">
				  #if ($product.image1)
				    <a class="pull-left" href="$product.image1" data-toggle="lightbox" data-type="image" data-title="$product.title (${Formatter.formatCurrency($product.basePrice)} €)" data-footer="$product.shortDescription">
				      #if ($product.thumbnail)
						<img class="media-object" src="$product.thumbnail" alt="..." class="img-responsive">
					  #else
						<img class="media-object" src="$product.image1" width="60px" height="45px" alt="..." class="img-responsive">
					  #end
				    </a>
				  #else
				    <a class="pull-left" href="$defaultProductImage" data-toggle="lightbox" data-type="image" data-title="$product.title (${Formatter.formatCurrency($product.basePrice)} €)" data-footer="$product.shortDescription">
						<img class="media-object" src="$defaultProductThumbnail" alt="..." class="img-responsive">
				    </a>
				  
				  #end
				    <div class="media-body">
	                        <h4 class="media-heading pull-right">
								#if ($product.vegetarian)
									<i class="fa fa-leaf" style="color:green"></i>
								#end
								#if ($product.defaultSpicyLevel==1)
									<i class="fa fa-fire" style="color:red"></i>
								#elseif ($product.defaultSpicyLevel==2)
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
								#elseif ($product.defaultSpicyLevel==3)
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
								#elseif ($product.defaultSpicyLevel==4)
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
									<i class="fa fa-fire" style="color:red"></i>
								#end 							
								
								${Formatter.formatCurrency($product.basePrice)} €</h4>
	                        <h4 class="media-heading"><a href="/product/$product.name">${product.name}. ${product.title}</a></h4>
	                        <p>${product.shortDescription}</p>
				    </div>
				  </li> 
				</ul>
            	#end
            </div>
        </div>
    </div>
    <!-- /.container -->

   #parse("$theme/pages/footer.vm")
   
    
</body>

</html>